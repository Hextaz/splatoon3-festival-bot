{
  "name": "splatoon3-festival-bot",
  "script": "src/index.js",
  "instances": 1,
  "exec_mode": "fork",
  "watch": false,
  "max_memory_restart": "500M",
  "env": {
    "NODE_ENV": "production",
    "PORT": 3000
  },
  "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
  "error_file": "/var/log/splatoon-bot/error.log",
  "out_file": "/var/log/splatoon-bot/out.log",
  "log_file": "/var/log/splatoon-bot/combined.log",
  "time": true,
  "restart_delay": 5000,
  "max_restarts": 10,
  "min_uptime": "10s"
}
